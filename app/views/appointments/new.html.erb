<h3>REQUEST APPOINTMENT</h3>
 
      <%= form_with(model: [@doctor, @appointment], local: true) do |f| %>
      <%= f.select :patient_id, @patient.collect { |u| [u.full_name, u.id] } %>
    
      <br>
     
      <%= f.date_field :date %>
      <%= f.submit nil, class: "btn waves-effect waves-light" %>
      <% end %>
    </div>
  